@model IEnumerable<CiZoochilpan.Areas.Animales.Models.Animal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestión de Animales</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times; </span> </button>
        @TempData["Success"].ToString()
    </div>
}
else if (TempData["Error"] != null)
{

    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"> &times;  </span> </button>
        @TempData["Error"].ToString()
    </div>
}


<div class="col-md-18">
    <div class="panel panel-default">
        <div class="panel-heading"> <center><h3 class="opcion_iluminada"> Gestión de Animales </h3> </center> </div>
        <div class="panel-body">
            <a href="@Url.Action("Create", "Animal" )" class="btn btn-success btn-xl">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>

            <form method="get" class="navbar-form navbar-right" role="search" asp-controller="Animal" asp-action="Index">
                <div class="input-group">
                    <input type="text" class="form-control" name="textoBuscar" placeholder="Buscar..." asp-for="textoBuscar" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search"> </span>
                            <i class="fa fa-search">
                            </i>
                        </button>
                    </span>
                </div>
            </form>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nombreCientifico)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombreComun)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.clase)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.orden)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.familia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.especie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.habitat)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombreCientifico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombreComun)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.clase)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.orden)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.familia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.especie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.habitat)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Animal", new { id= item.id } )" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Delete", "Animal", new { id= item.id } )" class="btn btn-danger btn-xs">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true" onclick="return Confirmacion();"></span>
                            </a>

                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function Confirmacion() {
            var flag = confirm('Estas seguro de borrar este registro?');
            if (flag) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}

