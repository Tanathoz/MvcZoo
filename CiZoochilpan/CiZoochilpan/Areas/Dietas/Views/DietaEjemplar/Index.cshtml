@model IEnumerable<CiZoochilpan.Areas.Dietas.Models.DietaEjemplarModelView>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times; </span> </button>
        @TempData["Success"].ToString()
    </div>
}
else if (TempData["Error"] != null)
{

    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"> &times;  </span> </button>
        @TempData["Error"].ToString()
    </div>
}

<div>
    <br />
    <br />

</div>

<div class="col-md-18">
    <div class="panel panel-default">
        <div class="panel-heading"> <center><h3 class="opcion_iluminada"> Gestión de Dieta Ejemplares</h3> </center> </div>
        <div class="panel-body">
            <a href="@Url.Action("Create", "DietaEjemplar" )" class="btn btn-success btn-xl">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>

            <form method="get" class="navbar-form navbar-right" role="search" asp-controller="Dieta" asp-action="Index">
                <div class="input-group">
                    <input type="text" class="form-control" name="textoBuscar" placeholder="Buscar..." asp-for="textoBuscar" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search"> </span>
                            <i class="fa fa-search">
                            </i>
                        </button>
                    </span>
                </div>
            </form>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.marcaje)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombreComun)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombrePropio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fechaCambio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.causaCambio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.alimento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.horario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.consideraciones)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.marcaje)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombreComun)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombrePropio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fechaCambio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.causaCambio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.alimento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.horario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.consideraciones)
                        </td>
                        <td>

                            <a href="@Url.Action("Edit", "DietaEjemplar", new { marcaje= item.marcaje } )" class="btn btn-primary btn-xs">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Delete", "DietaEjemplar", new { marcaje= item.marcaje } )" class="btn btn-danger btn-xs" onclick="return Confirmacion();">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function Confirmacion() {
            var flag = confirm('Estas seguro de borrar este registro?');
            if (flag) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}